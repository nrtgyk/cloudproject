pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from your version control system (e.g., Git)
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    docker.build 'nurten/cloudproject'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Run the Docker container
                    docker.image('nurten/cloudproject').run('-p 8080:80', '-d')
                }
            }
        }

        // Add more stages as needed for testing, deployment, etc.
    }

    post {
        always {
            // Clean up by stopping and removing the Docker container
            script {
                docker.image('nurten/cloudproject').stop()
                docker.image('nurten/cloudproject').remove()
            }
        }
    }
}
